<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-grop">
            <%= f.label(:name, "Name") %>
            <%= f.text_field :name, class:"form-control name" %>
          </div>
          <div class="form-grop">
            <%= f.label(:image, "Image") %>
            <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
          </div>
          <div class="form-grop">
            <%= f.label(:introduction, "Introduction") %>
            <%= f.text_area :profile, class:"form-control introduction" %>
          </div>
          <div class="form-grop">
            <%= f.submit "Update User", class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>