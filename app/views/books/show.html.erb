<main>
  <div class="container">
    <div class="row">
      <%= render partial: 'users/user_info', locals: { user: @user, book: @book } %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                  <%= link_to book.user.name, user_path(@user) %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.user.id) %>
                </td>
                <td>
                  <%= book.opinion %>
                </td>
                <% if @user.id == current_user.id %>
                  <td>
                    <%= link_to "Edit", edit_book_path(book) %>
                  </td>
                  <td>
                    <%= link_to "Destroy",book_path(book), method: :delete %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>