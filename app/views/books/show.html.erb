<main>
  <%= render 'layouts/flash' %>
  <div class="container">
    <div class="row">
      <%= render partial: 'users/user_info', locals: { user: @user, book: @book } %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @books.user, :profile_image, fallback: "user_no_image.jpg", size: "40x40" %>
                  <br>
                  <%= @books.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @books.title, book_path(@books) %>
              </td>
              <td>
                <%= @books.body %>
              </td>
              <% if @user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy",book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-sm btn-danger" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>